
@model IEnumerable<EventsViewModel>

@{
    ViewData["Title"] = "All Events";
}

<h1>All Events</h1>
<br /> 

<br /> 


<form asp-action="index" class="m-5">
    <div class="row">
        <div class="col-8">
            <input type="text" name="SearchInput" id="SearchInput" class="form-control" placeholder="Search" />
        </div>
        <div class="col-4">
            <input type="submit" value="search" class="btn btn-success" />
        </div>
    </div>

</form>



<a asp-controller="Events" asp-action="Create" class=" btn btn-primary">Create Event</a>

<br/>
<br/> 
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E=>E.Image)</th>
                <th>@Html.DisplayNameFor(E => E.EventName)</th>
                <th>@Html.DisplayNameFor(E => E.EventDescription)</th>
                <th>@Html.DisplayNameFor(E => E.EventLocation)</th>
                <th>@Html.DisplayNameFor(E => E.DateTime)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/files/images/@item.ImageName" width="75" class="img-fluid rounded-circle" />
                    </td>
                    <td>@item.EventName</td>
                    <td>@item.EventDescription</td>
                    <td>@item.EventLocation</td>
                    <td>@item.DateTime</td>
                    <partial name="_ButtonsPartialView" model="@item.ID.ToString()" />
                </tr> 
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>there is no Events :(</h4>
    </div>
}