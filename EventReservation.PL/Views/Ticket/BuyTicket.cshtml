
@model IEnumerable<string>;

@{
    ViewData["Title"] = "GetEventCategory";
}

<form asp-controller="Ticket" asp-action="BuyTicket" method="post">
    <h1>Select Event Category</h1>

    <br />
    <br />
    @if (Model.Count() > 0)
    {
        <div class="table table-striped table-hover">

            @Html.DisplayName("Category")


        </div>
        @foreach (var item in Model)
        {

            <div class="category-name">@item</div>

            <div class="buy-button">
                <button type="submit" asp-controller="Ticket" asp-action="BuyTicket" asp-route-id="@ViewData["CurrentEventID"]" asp-route-name="default" asp-route-customData="@item" class="btn btn-info">
                    <i class="fas fa-eye"></i>Buy Ticket
                </button>
            </div>


        }
        
       @*  <div >
            <button type="submit" asp-controller="Ticket" asp-action="ViewTicket" asp-route-name="default" asp-route-customData="@ViewData["QrCodeImage"]" class="btn btn-info">
                <i class="fas fa-eye"></i>View My Ticket
            </button>
        </div> *@
    }
    else
    {
        <div class="mt-4 alert alert-warning">
            <h4>there is no Categories :(</h4>
        </div>
    }
</form>
