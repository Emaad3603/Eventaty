

@model TicketViewModel


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Create Page </h4>
<br />
<br />

<form asp-controller="Ticket" asp-action="CreateTickets">

    <div class="form-group">
        <label asp-for="TicketsNumber" class="col-form-label"></label>
        <input asp-for="TicketsNumber" class="form-control" />
        <span asp-validation-for="TicketsNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TicketCategory" class="col-form-label"></label>
        <input asp-for="TicketCategory" class="form-control" />
        <span asp-validation-for="TicketCategory" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TicketPrice" class="col-form-label"></label>
        <input asp-for="TicketPrice" class="form-control" />
        <span asp-validation-for="TicketPrice" class="text-danger"></span>
    </div>
    

    <input type="submit" value="CreateTickets" class="btn btn-primary" />
    <a asp-controller="Events" asp-action="Index" class="btn btn-light">Back to List</a>
</form>"

@section ValidationSection
{
    <partial name="_ValidationScriptsPartial" />

}

