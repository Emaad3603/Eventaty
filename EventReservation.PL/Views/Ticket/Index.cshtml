
@model IEnumerable<Ticket>

@{
    ViewData["Title"] = "All Tickets";
  
}

<h1>All Tickets</h1>
<br /> 
<br /> 


<br/>
<br/> 
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(T=>T.EventID)</th>
                <th>@Html.DisplayNameFor(T => T.TicketCode)</th>
                <th>@Html.DisplayNameFor(T => T.TicketCategory)</th>
                <th>@Html.DisplayNameFor(T => T.TicketPrice)</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.EventID</td>
                    <td>@item.TicketCode</td>
                    <td>@item.TicketCategory</td>
                    <td>@item.TicketPrice</td>
                    
                </tr> 
            }
        </tbody>
    </table>
  
}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>there is no Tickets :(</h4>
    </div>
}
<td>
    <a asp-controller="Ticket" asp-action="CreateTickets" asp-route-id="@ViewData["CurrentEventID"]" class="btn btn-info">
        <i class="fas fa-eye"></i>Create Tickets
    </a>
</td>
<td>
    <a asp-controller="Ticket" asp-action="DeleteEventTicket" asp-route-id="@ViewData["CurrentEventID"]" class="btn btn-info">
        <i class="fas fa-eye"></i>Delete Tickets
    </a>
</td>