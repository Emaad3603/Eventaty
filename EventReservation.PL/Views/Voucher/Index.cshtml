@model IEnumerable<Voucher>
  
@{
    ViewData["Title"] = "All Vouchers";
}

<h1>All Vouchers</h1>
<br />
<br />


<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(V => V.EventID)</th>
                <th>@Html.DisplayNameFor(V => V.VoucherCode)</th>
                <th>@Html.DisplayNameFor(V => V.VoucherDiscount)</th>
               

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EventID</td>
                    <td>@item.VoucherCode</td>
                    <td>@item.VoucherDiscount</td>
                  

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>there is no Tickets :(</h4>
    </div>
}
<td>
    <a asp-controller="Voucher" asp-action="CreateVouchers" asp-route-id="@ViewData["CurrentEventID"]" class="btn btn-info">
        <i class="fas fa-eye"></i>Create Vouchers
    </a>
</td>
<td>
    <a asp-controller="Voucher" asp-action="DeleteEventVoucher" asp-route-id="@ViewData["CurrentEventID"]" class="btn btn-info">
        <i class="fas fa-eye"></i>Delete Vouchers
    </a>
</td>